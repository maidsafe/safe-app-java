				<!-- START OF PLUGINS -->
				<plugins>
					<!-- Maven Downloader Plugin for downloading the lib files -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>wagon-maven-plugin</artifactId>
						<version>1.0</version>
						<executions>
							<execution>
								<id>download-libs-32</id>
								<phase>validate</phase>
								<goals>
									<goal>download-single</goal>
								</goals>
								<configuration>
									<url>https://github.com</url>
									<fromFile>
										gnunicorn/safe_core/releases/download/v0.1.0-pre30/safe_app-dev-v0.1.0-pre30-win32-x64.zip
									</fromFile>
									<toDir>${basedir}/res/win32-x86</toDir>
								</configuration>
							</execution>

							<!-- Downloading the libwinpthread-1 library zip -->
							<execution>
								<id>download-libwinpthread-1</id>
								<phase>validate</phase>
								<goals>
									<goal>download-single</goal>
								</goals>
								<configuration>
									<url>https://github.com</url>
									<fromFile>
										gnunicorn/safe_core/releases/download/v0.1.0-pre3/libwinpthread-1-v0.1.0-pre3-win32-ia32.zip
									</fromFile>
									<toDir>${basedir}/res/win32-x86</toDir>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- Unzip contents of libs downloaded and delete all except the required 
						lib files -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.8</version>
						<executions>
							<execution>
								<id>prepare</id>
								<phase>validate</phase>
								<configuration>
									<target unless="${wagon.skip}">
										<echo message="Extracting zipped libraries" />
										<unzip
											src="${basedir}/res/win32-x86/safe_app-dev-v0.1.0-pre30-win32-x64.zip"
											dest="${basedir}/res/win32-x86" />
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>

							<!-- Extracting the downloaded libwinpthread-1 library -->
							<execution>
								<id>downloadwinpthread-32</id>
								<phase>validate</phase>
								<configuration>
									<target unless="${wagon.skip}">
										<echo message="Extracting libwinpthread-1 library" />
										<unzip
											src="${basedir}/res/win32-x86/libwinpthread-1-v0.1.0-pre3-win32-ia32.zip"
											dest="${basedir}/res/win32-x86" />
										<delete>
											<fileset dir="${basedir}/res/win32-x86" excludes="*.dll" />
										</delete>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>


						</executions>
					</plugin>

					<!-- Maven Shade Plugin for creating a FatJar/UberJar with all transitive 
						dependencies included -->

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-shade-plugin</artifactId>
						<version>3.0.0</version>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>shade</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>

