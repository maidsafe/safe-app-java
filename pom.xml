		<!-- PROFILE FOR WINDOWS X64 -->
		<profile>
			<id>platform-windows-64</id>
			<activation>
				<os>
					<family>windows</family>
					<name>Windows</name>
					<!-- <arch>x64</arch> -->
				</os>
			</activation>
			<build>
				<!-- START OF PLUGINS -->
				<plugins>
					<!-- Maven Downloader Plugin for downloading the lib files -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>wagon-maven-plugin</artifactId>
						<version>1.0</version>
						<executions>
							<execution>
								<id>download-libs</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>download-single</goal>
								</goals>
								<configuration>
									<url>https://github.com</url>
									<fromFile>krishnaIndia/safe_core/releases/download/v0.1.0-pre32/safe_app-dev-v0.1.0-pre32-win32-x64.zip</fromFile>
									<toDir>${basedir}/res/win32-x86</toDir>
									<tasks>
										<echo>Hello you are in Windows Machine!</echo>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- Unzip contents of libs downloaded and delete all except the required 
						lib file -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.6</version>
						<executions>
							<execution>
								<id>prepare</id>
								<phase>pre-integration-test</phase>
								<configuration>
									<tasks>
										<echo message="Extracting zipped libraries" />
										<unzip
											src="${basedir}/res/darwin/safe_app-dev-v0.1.0-pre30-win32-x64.zip"
											dest="${basedir}/res/win32-x86" />
										<delete>
											<fileset dir="${basedir}/res/win32-x86" excludes="*.dll" />
										</delete>
									</tasks>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<!-- Maven Shade Plugin for creating a FatJar/UberJar with all transitive 
						dependencies included -->

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-shade-plugin</artifactId>
						<version>3.0.0</version>
						<executions>
							<execution>
								<id></id>
								<phase>package</phase>
								<goals>
									<goal>shade</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>

				<!-- END OF PLUGINS -->

			</build>
